{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": false,
  "dependencyDashboardApproval": false,
  "automerge": true,
  "ignoreTests": true,
  "automergeType": "pr",
  "automergeSchedule": ["after 7am and before 7pm on weekdays"],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0
}