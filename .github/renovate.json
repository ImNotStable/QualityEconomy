{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": false,
  "dependencyDashboardApproval": false,
  "automerge": true,
  "automergeType": "pr",
  "automergeSchedule": "every day",
  "packageRules": [
    {
      "matchUpdateTypes": ["major", "minor", "patch"],
      "automerge": true
    }
  ],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0
}